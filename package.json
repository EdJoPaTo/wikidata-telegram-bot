{
	"name": "wikidata-telegram-bot",
	"private": true,
	"version": "2.1.0",
	"description": "Quick Look on Wikidata Entities via Telegram",
	"license": "MIT",
	"repository": "EdJoPaTo/wikidata-telegram-bot",
	"author": {
		"name": "EdJoPaTo",
		"email": "wikidata-telegram-bot@edjopato.de",
		"url": "https://edjopato.de"
	},
	"scripts": {
		"start": "tsc --sourceMap && node --enable-source-maps dist/index.js",
		"test": "tsc --sourceMap && xo"
	},
	"type": "module",
	"engines": {
		"node": ">=18"
	},
	"dependencies": {
		"@grammyjs/i18n": "^1.0.1",
		"@grammyjs/storage-file": "^2.0.0",
		"array-filter-unique": "^3.0.2",
		"grammy": "^1.15.2",
		"grammy-inline-menu": "^8.0.0",
		"locale-emoji": "^0.3.0",
		"telegraf-middleware-console-time": "^2.0.0",
		"telegraf-wikibase": "^0.13.0",
		"telegram-format": "^2.0.0",
		"wikibase-sdk": "^9.2.2"
	},
	"devDependencies": {
		"@sindresorhus/tsconfig": "^4.0.0",
		"@types/node": "^18.6.2",
		"typescript": "^5.0.2",
		"xo": "^0.56.0"
	},
	"xo": {
		"rules": {
			"@typescript-eslint/naming-convention": "off",
			"n/file-extension-in-import": "off",
			"n/prefer-global/process": "off"
		}
	}
}
