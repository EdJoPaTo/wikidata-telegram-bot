{
	"name": "wikidata-telegram-bot",
	"private": true,
	"version": "2.0.2",
	"description": "Quick Look on Wikidata Entities via Telegram",
	"license": "MIT",
	"repository": "EdJoPaTo/wikidata-telegram-bot",
	"author": {
		"name": "EdJoPaTo",
		"email": "wikidata-telegram-bot@edjopato.de",
		"url": "https://edjopato.de"
	},
	"scripts": {
		"build": "del-cli dist && tsc",
		"start": "tsc --sourceMap && node --enable-source-maps dist/index.js",
		"test": "tsc --sourceMap && xo"
	},
	"type": "commonjs",
	"engines": {
		"node": ">=16"
	},
	"dependencies": {
		"@grammyjs/i18n": "^0.5.0",
		"@grammyjs/storage-file": "^2.0.0",
		"array-filter-unique": "^2.1.0",
		"got": "^11.1.0",
		"grammy": "^1.4.0",
		"grammy-inline-menu": "^7.0.2",
		"locale-emoji": "^0.3.0",
		"telegraf-middleware-console-time": "^2.0.0",
		"telegraf-wikibase": "^0.11.0",
		"telegram-format": "^2.0.0",
		"wikibase-types": "^0.4.0",
		"wikidata-entity-reader": "^3.0.0",
		"wikidata-sdk": "^8.0.0",
		"wikidata-sdk-got": "^2.0.0"
	},
	"devDependencies": {
		"@grammyjs/types": "^2.3.1",
		"@sindresorhus/tsconfig": "^3.0.0",
		"@types/node": "^16.4.9",
		"del-cli": "^4.0.0",
		"typescript": "^4.2.3",
		"xo": "^0.49.0"
	},
	"xo": {
		"rules": {
			"@typescript-eslint/naming-convention": "off",
			"@typescript-eslint/no-unsafe-call": "off",
			"node/prefer-global/process": "off"
		}
	}
}
